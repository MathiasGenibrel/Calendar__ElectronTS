{
  "compilerOptions": {
    "target": "ES2015",
    "module": "NodeNext",
    "lib": ["dom", "ES2015", "ES2016", "ES2017"],
    "baseUrl": ".",
    "paths": {
      "@main/": ["./src/main"],
      "@renderer/": ["./src/renderer"]
    },
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["./src", "./test", "./mocks"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
